#
# History
#
HISTFILE=~/.histfile
HISTSIZE=10000
SAVEHIST=10000
# Share history betwen multiple termional sessions
setopt share_history
# Append history, instead of replace, when a terminal session exits
setopt appendhistory
# Add comamnds as they are typed, don't wait until shell exit
setopt inc_append_history
# Ignore in history commands with a space before
setopt hist_ignore_space
# Remove the old entry in history and append the new one
setopt hist_ignore_all_dups
# When searching history don't display results already cycled through twice
setopt hist_find_no_dups
# Remove extra blanks from each command line being added to history
setopt hist_reduce_blanks
# Add timestamps to history
setopt extended_history


#
# Options
#

# Enable parameter expansion, command substitution, and arithmetic expansion in the prompt
setopt prompt_subst
# Allow completion from within a word/phrase
setopt complete_in_word
# When completing from the middle of a word, move the cursor to the end of the word
setopt always_to_end
# Completion correction : 'sl' instead of 'ls'
setopt correctall
# If you type foo, and it isn't a command, and it is a directory in your cdpath, go there
setopt autocd
# Make cd push the old directory onto the directory stack.
setopt auto_pushd
# Autoselect the first completion entry
setopt menu_complete
# Allow comments even in interactive shells
setopt interactive_comments
# Report the status of background jobs immediately, rather than waiting until just before printing a prompt
setopt notify
# List jobs in the long format
setopt long_list_jobs
# Don't kill background jobs on logout
setopt nohup
# Allow functions to have local options
setopt local_options
# Allow functions to have local traps
setopt local_traps


#
# ENV
#
export PATH=~/bin:/usr/local/sbin:/usr/local/bin:$PATH
export EDITOR=/usr/bin/vim
export VISUAL=/usr/bin/gvim
export GREP_OPTIONS='--color=auto'
# displays Grep matches in inverse video, very easy to see
export GREP_COLOR=7
export LESS='--ignore-case --raw-control-chars'
export PAGER=less
# List of directories we can cd to from anywhere
export CDPATH=.:~/Development/


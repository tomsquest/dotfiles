#!/bin/bash

set -euo pipefail

third_monitor="DP-3"

if xrandr | grep -q "$third_monitor connected (normal left inverted right x axis y axis)"; then
  xrandr --output "$third_monitor" --rotate inverted --pos 1600x-1200 --auto --noprimary --nograb --output HDMI-0 --primary
else
  xrandr --output "$third_monitor" --off --output HDMI-0 --primary
fi
